<section class="relative w-full min-h-screen flex items-center justify-center pt-32 pb-20 overflow-hidden bg-gradient-to-b from-[#0f1a27] to-black">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-20 w-96 h-96 bg-[#d4af7d]/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 left-20 w-96 h-96 bg-[#d4af7d]/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s"></div>
  </div>

  <!-- Harmonic visualization -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" viewBox="0 0 1200 800">
      <g stroke="#d4af7d" stroke-width="2" fill="none">
        {[0, 1, 2, 3, 4, 5, 6, 7].map((i) => (
          <line x1={150 + i * 130} y1="200" x2={150 + i * 130} y2="600" />
        ))}
        <path d="M 150 400 Q 280 350, 410 400 T 670 400 T 930 400 T 1050 400" stroke-dasharray="5,5" />
      </g>
    </svg>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
    <p class="text-[#d4af7d] text-sm font-semibold mb-4 tracking-widest animate-fade-in uppercase">
      The Framework
    </p>

    <h1 class="text-6xl md:text-7xl lg:text-8xl font-serif font-bold leading-tight mb-6 text-white animate-slide-up">
      The Octave Modelâ„¢
    </h1>

    <p class="text-2xl md:text-3xl font-serif text-[#e0b890] mb-8 animate-slide-up" style="animation-delay: 0.1s">
      Leadership in Rhythm
    </p>

    <p class="text-lg md:text-xl text-gray-200 max-w-3xl mx-auto mb-12 leading-relaxed animate-slide-up" style="animation-delay: 0.2s">
      Eight measurable pillars that transform chaos into clarity, and leaders into systems architects.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up" style="animation-delay: 0.3s">
      <button class="px-8 py-4 bg-[#d4af7d] hover:bg-[#e0b890] text-black font-bold rounded-lg transition-all duration-300 text-lg shadow-lg hover:shadow-[#d4af7d]/50 transform hover:scale-105">
        Start Your Octave Journey
      </button>
      <button class="px-8 py-4 border-2 border-[#d4af7d] hover:border-[#e0b890] text-[#d4af7d] hover:text-[#e0b890] font-bold rounded-lg transition-all duration-300 text-lg transform hover:scale-105">
        Take the Octave Diagnostic
      </button>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-[#d4af7d]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slide-up {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out;
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out 0.2s both;
  }
</style>
