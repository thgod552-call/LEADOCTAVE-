---
interface Testimonial {
  id: string;
  name: string;
  company: string;
  rating: number;
  message: string;
  image: string;
}

const testimonials: Testimonial[] = [
  {
    id: '1',
    name: 'Grace Collins',
    company: 'CEO, XYZ Company',
    rating: 5,
    message: 'LeadOctave Consultancy transformed our operations. Their strategic insights and automation solutions had an immediate impact on our efficiency and bottom line.',
    image: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=100&h=100&fit=crop'
  },
  {
    id: '2',
    name: 'Grace Collins',
    company: 'CEO, XYZ Company',
    rating: 5,
    message: 'LeadOctave Consultancy transformed our operations. Their strategic insights and automation solutions had an immediate impact on our efficiency and bottom line.',
    image: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=100&h=100&fit=crop'
  },
  {
    id: '3',
    name: 'Grace Collins',
    company: 'CEO, XYZ Company',
    rating: 5,
    message: 'LeadOctave Consultancy transformed our operations. Their strategic insights and automation solutions had an immediate impact on our efficiency and bottom line.',
    image: 'https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=100&h=100&fit=crop'
  }
];
---

<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Header -->
    <div class="flex flex-col lg:flex-row items-start lg:items-end justify-between gap-8 mb-16">
      <div>
        <p class="text-gray-600 text-sm font-semibold tracking-widest mb-4 uppercase">TESTIMONIALS</p>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-black leading-tight max-w-2xl">
          Discover what our clients have to say about their experience partnering with LeadOctave
        </h2>
      </div>

      <!-- Rating Icons -->
      <div class="flex gap-3">
        <div class="w-10 h-10 rounded-full bg-[#d4af7d] flex items-center justify-center text-black font-bold">4</div>
        <div class="w-10 h-10 rounded-full bg-blue-400 flex items-center justify-center text-white font-bold">8</div>
        <div class="w-10 h-10 rounded-full bg-purple-400 flex items-center justify-center text-white font-bold">★</div>
        <div class="w-10 h-10 rounded-full bg-pink-400 flex items-center justify-center text-white font-bold">+</div>
      </div>
    </div>

    <!-- Testimonials Carousel -->
    <div class="relative">
      <!-- Testimonials Container -->
      <div class="overflow-hidden">
        <div id="testimonials-container" class="flex transition-transform duration-500 ease-out">
          {testimonials.map((testimonial) => (
            <div class="min-w-full md:min-w-1/2 lg:min-w-1/3 px-4">
              <div class="bg-gray-50 rounded-xl p-8 h-full border border-gray-200 hover:border-[#d4af7d]/30 transition-all duration-300">
                <!-- Client Info -->
                <div class="flex items-center gap-4 mb-6">
                  <img
                    src={testimonial.image}
                    alt={testimonial.name}
                    class="w-16 h-16 rounded-full object-cover"
                  />
                  <div>
                    <h4 class="font-serif font-bold text-black">{testimonial.name}</h4>
                    <p class="text-sm text-gray-700">{testimonial.company}</p>
                  </div>
                </div>

                <!-- Rating Stars -->
                <div class="flex gap-1 mb-4">
                  {Array.from({ length: testimonial.rating }).map(() => (
                    <span class="text-yellow-400 text-lg">★</span>
                  ))}
                </div>

                <!-- Message -->
                <p class="text-gray-800 text-base leading-relaxed">
                  {testimonial.message}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Dots -->
      <div class="flex justify-center gap-3 mt-12">
        {testimonials.map((_, index) => (
          <button
            class={`carousel-dot w-3 h-3 rounded-full transition-all duration-300 ${
              index === 0 ? 'bg-gray-400 w-8' : 'bg-gray-300 hover:bg-gray-400'
            }`}
            data-index={index}
            aria-label={`Go to testimonial ${index + 1}`}
          ></button>
        ))}
      </div>

      <!-- Navigation Arrows -->
      <button
        id="prev-testimonial"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-12 md:translate-x-0 w-10 h-10 rounded-full bg-gray-200 hover:bg-[#d4af7d] text-black hover:text-black transition-all duration-300 flex items-center justify-center"
        aria-label="Previous testimonial"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <button
        id="next-testimonial"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-12 md:translate-x-0 w-10 h-10 rounded-full bg-gray-200 hover:bg-[#d4af7d] text-black hover:text-black transition-all duration-300 flex items-center justify-center"
        aria-label="Next testimonial"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  let currentIndex = 0;
  const container = document.getElementById('testimonials-container');
  const dots = document.querySelectorAll('.carousel-dot');
  const prevBtn = document.getElementById('prev-testimonial');
  const nextBtn = document.getElementById('next-testimonial');
  const testimonialCount = document.querySelectorAll('[data-index]').length - 3; // Adjust for visible items

  function updateCarousel() {
    if (!container) return;
    const itemWidth = container.querySelector('div').offsetWidth;
    container.style.transform = `translateX(-${currentIndex * itemWidth}px)`;

    // Update dots
    dots.forEach((dot, index) => {
      if (index === currentIndex) {
        dot.classList.add('w-8');
        dot.classList.remove('w-3');
        dot.classList.add('bg-gray-400');
      } else {
        dot.classList.remove('w-8');
        dot.classList.add('w-3');
        dot.classList.remove('bg-gray-400');
      }
    });
  }

  function nextSlide() {
    currentIndex = (currentIndex + 1) % (dots.length);
    updateCarousel();
  }

  function prevSlide() {
    currentIndex = (currentIndex - 1 + dots.length) % dots.length;
    updateCarousel();
  }

  if (prevBtn && nextBtn) {
    prevBtn.addEventListener('click', prevSlide);
    nextBtn.addEventListener('click', nextSlide);
  }

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentIndex = index;
      updateCarousel();
    });
  });

  // Auto-advance carousel every 5 seconds
  setInterval(nextSlide, 5000);
</script>

<style>
  #testimonials-container {
    display: flex;
  }

  @media (max-width: 768px) {
    #testimonials-container {
      scroll-snap-type: x mandatory;
    }
  }
</style>
