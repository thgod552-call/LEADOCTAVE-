---
interface Props {
  videoUrl?: string;
  youtubeLink?: string;
}

const { 
  videoUrl = 'https://images.unsplash.com/photo-1552664730-d307ca884978?w=1400&h=800&fit=crop',
  youtubeLink = 'https://www.youtube.com'
} = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <!-- Heading -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold leading-tight text-black max-w-4xl mx-auto">
        Achieving growth relies on taking straightforward & automated measures.
      </h2>
    </div>

    <!-- Video Container -->
    <div class="relative group rounded-2xl overflow-hidden shadow-2xl h-96 md:h-[500px] lg:h-[600px]">
      <!-- Background Image -->
      <div
        class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-105"
        style={`background-image: url('${videoUrl}'); background-position: center;`}
      />

      <!-- Overlay -->
      <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-all duration-300"></div>

      <!-- Play Button -->
      <a
        href={youtubeLink}
        target="_blank"
        rel="noopener noreferrer"
        class="absolute inset-0 flex items-center justify-center z-10 cursor-pointer"
      >
        <!-- Play Icon Container -->
        <div class="relative">
          <!-- Outer Circle Animation -->
          <div class="absolute inset-0 rounded-full bg-white/20 group-hover:bg-white/30 transition-all duration-300 scale-100 group-hover:scale-110 blur opacity-0 group-hover:opacity-100"></div>
          
          <!-- Middle Circle -->
          <div class="relative w-20 h-20 rounded-full bg-white flex items-center justify-center shadow-lg group-hover:shadow-2xl transition-all duration-300 transform group-hover:scale-110">
            <!-- Inner Play Icon -->
            <svg class="w-8 h-8 text-[#d4af7d] fill-current ml-1" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z" />
            </svg>
          </div>

          <!-- Pulsing Ring Animation -->
          <div class="absolute inset-0 rounded-full border-2 border-white opacity-0 group-hover:opacity-100 group-hover:animate-pulse"></div>
        </div>
      </a>

      <!-- Shine Effect on Hover -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 group-hover:opacity-10 translate-x-[-100%] group-hover:translate-x-[100%] transition-all duration-700 ease-in-out pointer-events-none"></div>
    </div>

    <!-- Caption -->
    <div class="text-center mt-8">
      <p class="text-gray-600 text-sm font-medium">Click to watch our strategic approach in action</p>
    </div>
  </div>
</section>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .group-hover\:animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
