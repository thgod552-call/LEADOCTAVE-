---
interface ProcessStep {
  id: string;
  title: string;
  description: string;
  image: string;
}

const steps: ProcessStep[] = [
  {
    id: 'A',
    title: 'Evaluate Current Processes',
    description: 'Analyze your existing systems and workflows to identify inefficiencies and areas for improvement.',
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=600&fit=crop'
  },
  {
    id: 'B',
    title: 'Implement Streamlined Procedures',
    description: 'Deploy optimized processes and automation solutions tailored to your business needs.',
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=600&fit=crop'
  },
  {
    id: 'C',
    title: 'Incorporate Automation Solutions',
    description: 'Based on the evaluation, introduce streamlined procedures designed to enhance efficiency and reduce complexity.',
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=600&fit=crop'
  }
];
---

<section class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Process Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        steps.map((step, index) => (
          <div
            class="group relative h-96 rounded-2xl overflow-hidden cursor-pointer transform transition-all duration-300 hover:scale-105 hover:shadow-2xl"
          >
            <!-- Background Image -->
            <div
              class="absolute inset-0 bg-cover bg-center transition-transform duration-300 group-hover:scale-110"
              style={`background-image: url('${step.image}'); background-position: center;`}
            />

            <!-- Overlay Gradient -->
            <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/50 to-black/80" />

            <!-- Content -->
            <div class="relative h-full flex flex-col justify-between p-8 text-white z-10">
              <!-- Top: Badge -->
              <div class="flex items-center justify-start">
                <div class="bg-white/20 backdrop-blur-md text-white font-bold w-10 h-10 rounded flex items-center justify-center border border-white/30">
                  {step.id}
                </div>
              </div>

              <!-- Bottom: Title and Description -->
              <div>
                <h3 class="text-2xl font-serif font-bold mb-3 leading-tight">
                  {step.title}
                </h3>
                <p class="text-gray-200 text-sm leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>

            <!-- Hover Accent -->
            <div class="absolute top-0 right-0 w-1 h-full bg-gradient-to-b from-[#d4af7d] to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
          </div>
        ))
      }
    </div>
  </div>
</section>
